pipeline{
    agent any
    environment{
	  PATH = "${PATH}:${tool name: 'maven3', type: 'maven'}/bin"
        }
       stage('maven build'){
            steps{
              sh "mvn clean package"
            }
        }
        stage('Deploy -bharat'){
            when {
                branch 'develop'
            }
       steps{
                echo "deploy to bharat server"
            }
        }
        stage('Deploy -UAT'){
            when {
                branch 'bibhuti'
            }
       steps{
                echo "deploy to uat server"
       }
    }
        stage('Deploy -prod'){
            when {
                branch 'master'
            }
            steps{
                echo "deploy to prod server"
            }
        }
    }
}
