pipeline{
    agent any
    environment{
	  PATH = "${PATH}:${tool name: 'maven3', type: 'maven'}/bin"
	}
    stages{
        stage('SCM Checkout'){
            steps{
                git branch: "${params['branchName']}",
                    url: 'https://github.com/javahometech/6pmwebapp'
            }
        }
       stage('maven build'){
            steps{
              sh "mvn clean package"
            }
        }
        stage('Deploy -bharat'){
            steps{
                echo "deploy to bharat server"
            }
            
        }
    }
}pipeline{
    agent any
    parameters {
        string defaultValue: 'master', description: 'choose the branch to build and deploy', name: 'branchName', trim: false
    }
    stages{
        stage('scm checkout'){
            steps{
                git branch: "${params['branchName']}",
                    url: 'https://github.com/git212/jenkins'
            }        
        }
    }   
}
